        <!-- set tab list -->
        <ul class="set-tab cf">
          <?php if ($_setCollection):?>
          <?php foreach ($_setCollection as $_set): ?>
          <?php if (in_array($_set->getAttributeSetName(), $_displayAttributes)):?>
          <li id="enable-set-<?php print $_set->getId()?>"><span><?php print $_set->getAttributeSetName()?></span></li>
